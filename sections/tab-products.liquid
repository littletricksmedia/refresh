{% comment %}
Tabbed Product Grid Section
{% endcomment %}

<section class="tabbed-product-grid">
  <div class="container">
    <!-- Heading -->
    <div class="heading 
      {% if section.settings.layout == 'horizontal' %}
        flex flex-row
      {% else %}
        flex flex-col
      {% endif %}">
      <h2 class="{{ section.settings.heading_size }}">
        {{ section.settings.heading | escape }}
        {% if section.settings.highlight_style == 'underline' %}
          <span class="underline">{{ section.settings.highlight_text }}</span>
        {% endif %}
      </h2>
      <a href="{{ section.settings.button_link }}" class="btn">{{ section.settings.button_label }}</a>
    </div>

    <!-- Tabs -->
    <div class="tabs flex space-x-4">
      {% for tab in section.blocks %}
        <button 
          class="tab {% if forloop.first %}active{% endif %}" 
          data-tab="{{ tab.id }}">
          {{ tab.settings.tab_name }}
        </button>
      {% endfor %}
    </div>

    <!-- Product Grid -->
    <div class="product-grid grid {% if section.settings.grid_layout == 'grid_mix' %}grid-mix{% endif %}" 
         style="grid-template-columns: repeat({{ section.settings.columns }}, 1fr); 
                gap: {{ section.settings.gap }};">
      {% for tab in section.blocks %}
        <div class="tab-content {% if forloop.first %}block{% else %}hidden{% endif %}" id="{{ tab.id }}">
          {% assign products = tab.settings.collection.products | slice: 0, section.settings.max_products %}
          {% if products.size > 0 %}
            {% for product in products %}
              <div class="product">
                <a href="{{ product.url }}">
                  <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
                  <h3>{{ product.title }}</h3>
                  <p>{{ product.price | money }}</p>
                </a>
              </div>
            {% endfor %}
          {% else %}
            <p>No products available in this collection.</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .tab { cursor: pointer; padding: 0.5rem 1rem; border: 1px solid #ccc; border-radius: 4px; }
  .tab.active { font-weight: bold; color: black; background-color: #f0f0f0; }
  .tab:not(.active) { color: gray; }
  .product-grid { margin-top: 1rem; }
  .tab-content.hidden { display: none; }
  .product { text-align: center; padding: 1rem; border: 1px solid #ddd; border-radius: 4px; }
  .product img { max-width: 100%; height: auto; margin-bottom: 0.5rem; }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const tabs = document.querySelectorAll('.tab');
    const tabContents = document.querySelectorAll('.tab-content');

    tabs.forEach(tab => {
      tab.addEventListener('click', function () {
        // Deactivate all tabs and hide all tab contents
        tabs.forEach(t => t.classList.remove('active'));
        tabContents.forEach(content => content.classList.add('hidden'));

        // Activate the clicked tab and show its content
        this.classList.add('active');
        const tabId = this.getAttribute('data-tab');
        document.getElementById(tabId).classList.remove('hidden');
      });
    });
  });
</script>

{% schema %}
{
  "name": "Tabbed Product Grid",
  "settings": [
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        { "value": "vertical", "label": "Vertical" },
        { "value": "horizontal", "label": "Horizontal" }
      ],
      "default": "vertical"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading Size",
      "options": [
        { "value": "text-2xl", "label": "Heading 2xl" },
        { "value": "text-xl", "label": "Heading xl" }
      ],
      "default": "text-2xl"
    },
    {
      "type": "select",
      "id": "highlight_style",
      "label": "Highlight Text Style",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "underline", "label": "Underline" }
      ],
      "default": "none"
    },
    {
      "type": "number",
      "id": "max_products",
      "label": "Maximum Number of Products",
      "default": 10
    },
    {
      "type": "number",
      "id": "columns",
      "label": "Number of Columns on Desktop",
      "default": 4
    },
    {
      "type": "text",
      "id": "gap",
      "label": "Column and Row Gap",
      "default": "1rem"
    },
    {
      "type": "select",
      "id": "grid_layout",
      "label": "Grid Layout",
      "options": [
        { "value": "standard", "label": "Standard" },
        { "value": "grid_mix", "label": "Grid Mix" }
      ],
      "default": "standard"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
      "type": "tab",
      "name": "Tab",
      "settings": [
        {
          "type": "text",
          "id": "tab_name",
          "label": "Tab Name"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Tabbed Product Grid",
      "category": "Products"
    }
  ]
}
{% endschema %}
